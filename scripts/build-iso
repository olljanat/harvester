#!/bin/bash
set -e

cd $(dirname $0)/..

echo "Start building ISO image"

HARVESTER_INSTALLER_VERSION=v0.1.3-olljanat1

git clone --branch ${HARVESTER_INSTALLER_VERSION} --single-branch --depth 1 https://github.com/olljanat/harvester-installer.git ../harvester-installer

cd ../harvester-installer/scripts

./ci

mkdir -p ../../harvester/dist/artifacts
cp ../dist/artifacts/* ../../harvester/dist/artifacts

